<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_bookAuthor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/id_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ID: "
            app:layout_constraintBottom_toTopOf="@+id/author_ph"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/author_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Author: "
            app:layout_constraintBottom_toTopOf="@+id/price_ph"
            app:layout_constraintTop_toBottomOf="@+id/id_ph"
            tools:layout_editor_absoluteX="0dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/cv_bookID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Text View"
            app:layout_constraintBottom_toTopOf="@+id/cv_author"
            app:layout_constraintStart_toEndOf="@+id/id_ph"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/cv_price"
            app:layout_constraintStart_toEndOf="@+id/author_ph"
            app:layout_constraintTop_toBottomOf="@+id/cv_bookID" />

        <TextView
            android:id="@+id/cv_bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/title_ph"
            app:layout_constraintTop_toBottomOf="@+id/cv_pos" />

        <TextView
            android:id="@+id/cv_isbn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/isbn_ph"
            app:layout_constraintTop_toBottomOf="@+id/cv_bookTitle" />

        <TextView
            android:id="@+id/isbn_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="ISBN: "
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/title_ph" />

        <TextView
            android:id="@+id/title_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Title: "
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toBottomOf="@+id/isbn_ph2" />

        <TextView
            android:id="@+id/isbn_ph2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Position: "
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/cv_pos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/isbn_ph2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/price_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Price: "
            app:layout_constraintBottom_toTopOf="@+id/description_ph"
            app:layout_constraintTop_toBottomOf="@+id/author_ph"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/cv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/cv_bookDesc"
            app:layout_constraintStart_toEndOf="@+id/price_ph"
            app:layout_constraintTop_toBottomOf="@+id/cv_author" />

        <TextView
            android:id="@+id/description_ph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Description: "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_ph"
            tools:layout_editor_absoluteX="0dp" />

        <TextView
            android:id="@+id/cv_bookDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/description_ph"
            app:layout_constraintTop_toBottomOf="@+id/cv_price" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>